<h2>Submit Link</h2>
<%= form_for @link do |f| %>
  <%= f.label :url %>
  <%= f.text_field :url %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.submit "Submit" %>
<% end %>

<h2>My Links</h2>
<div id="links">
  <% if @links %>
    <%= render @links %>
  <% else %>
    Submit a link above.
  <% end %>
</div>

<%= javascript_include_tag "links/update" %>
