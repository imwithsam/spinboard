<div id="filterrific_results">
  <div>
    <%= page_entries_info links %>
  </div>

  <table>
    <tr>
      <th>Link</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
    </tr>
    <% links.each do |link| %>
      <tr>
        <td><%= link_to link.title, link.url, class: link.status %></td>
        <td><%= read_status_url(link) %></td>
        <td><%= link_to "Edit", edit_link_path(link), class: "btn btn-default" %></td>
      </tr>
    <% end %>
  </table>
</div>

<%= will_paginate links %>
